{% extends "layout.njk" %}

{% block content %}

    {# {% for item in items %} #}
    
    <div class="prato-centro">
        <img src="{{item.image}}" alt="Imagem do prato">
    </div>
    
    <div class="prato-titulo">
        <h3>{{item.title}}</h3>
        <p>{{item.author}}</p>
    </div>
    
    <div class="sub-titulos">
        <div>Ingredientes</div>
        <div>ESCONDER</div>
    </div>

    <div class="conteudo-text">
        <ul>
            {% for ingredient in item.ingredients %}
                <li>{{ingredient}}</li>
            {% endfor %}

        </ul>
    </div>

    <div class="sub-titulos-preparo">
        <div>Modo de preparo</div>
        <div>ESCONDER</div>
    </div>

    <div class="conteudo-text">
        <ul>
            {% for preparation1 in item.preparation %}
                <li>{{preparation1}}</li>
            {% endfor %}
        </ul>
    </div>

    <div class="sub-titulos-info">
        <div>Informações adicionais</div>
        <div>ESCONDER</div>
    </div>

    <div class="conteudo-text">
        <p>{{item.information}}</p>
    </div>

    {# {% endfor %} #}

{% endblock %}